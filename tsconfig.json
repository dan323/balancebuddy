{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "lib": ["DOM", "ESNext"],
      "allowJs": false,
      "jsx": "react-jsx",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "strict": true,
      "outDir": "./dist",
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }